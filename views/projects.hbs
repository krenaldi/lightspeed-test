<div id="projects">
    <div class="row">
        <div class="col-md-12">
            <h2>{{this.title}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h3>Project</h3>
        </div>
        <div class="col-md-4">
            <h3>Estimated Hours</h3>
        </div>
        <div class="col-md-4">
            <h3>Actions</h3>
        </div>
    </div>
    {{#each project_data}}
    <div class="row">
        <div class="col-md-4 ">
            <h3>{{this.title}}</h3>
        </div>
        <div class="col-md-4 ">
            <h3>{{this.hours}}</h3>
        </div>
        <div class="col-md-4 ">
            <form class="project-tasks">
                <input type="hidden" class="project_id" type="text" value={{this.id}}>
                <button type="submit" class="btn btn-default">View Tasks</button>
            </form>
        </div>
    </div>
    {{/each}}
</div>